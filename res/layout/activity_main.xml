<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"  >
    


	    <Button
	        android:id="@+id/menu_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left"
	        android:text="Menu" />
		
	    <Button
	        android:id="@+id/button_make_favourite"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right"
	        android:text="Make Favourite" />
	    
	    <Button
	        android:id="@+id/button_get_weather"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right"
	        android:text="Update" />

    
    <TextView
        android:id="@+id/city_weather_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:textColor="#000"
        android:textSize="25dp"
        android:layout_margin="5dp"
        android:text="City name" />
    
    <TextView
        android:id="@+id/city_weather_condition"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"    
        android:background="#FFFFFF"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:text="Weather" />
    
    <TextView
        android:id="@+id/city_temperature"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#FFFFFF"
        android:text="Temperature"
        android:textColor="#000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/city_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#FFFFFF"
        android:text="Forecast date"
        android:textColor="#000"
        android:textSize="20dp"/>

</LinearLayout>
